<nav class="ctr-margin logged-in-nav poettree-nav">
    <%= link_to dashboard_url do %>
      <p class="logo">iPoetTree</p>
    <% end %>
    <%= link_to 'Lessons', dashboard_url %>
    <!--<a href="#">PoetTree</a> -->
    <a href="#">Account Stuff</a>
</nav>

<p id="notice"><%= notice %></p>

<main class="poettree-bg">
  <div class="poettree-ctr">
    <div class="poettree-trunk">
      <%= image_tag('left-branch.svg', class:'branch branch-1 branch-left') %>
      <%= image_tag('leaves.svg', class:'leaf leaf-1 leaf-left') %>
      <%= image_tag('right-branch.svg', class:'branch branch-2 branch-right') %>
      <%= image_tag('leaves.svg', class:'leaf leaf-2 leaf-right') %>
      <%= image_tag('left-branch.svg', class:'branch branch-3 branch-left') %>
      <%= image_tag('leaves.svg', class:'leaf leaf-3 leaf-left') %>
      <%= image_tag('right-branch.svg', class:'branch branch-4 branch-right') %>
      <%= image_tag('leaves.svg', class:'leaf leaf-4 leaf-right') %>
      <%= image_tag('left-branch.svg', class:'branch branch-5 branch-left') %>
      <%= image_tag('leaves.svg', class:'leaf leaf-5 leaf-left') %>

      <div class="poettree-hole"></div>
    </div>
  </div>
  <div class="poettree-icon-btn poettree-search-btn">
    <%= image_tag('search-icon.svg', class:'poettree-search-icon') %>
  </div>
  <div class="poettree-icon-btn poettree-info-btn">
    <p>?</p>
  </div>
  <div class="poettree-icon-btn poettree-my-poems-btn">
    <%= image_tag('my-poems-icon.svg', class:'poettree-my-poems-icon') %>
  </div>
  <%= form_for poems_path, method: :get do |f| %>

  <%= text_field_tag :search, params[:search] %>
  <%= f.submit 'Search' %>

  <% end %>
  
  <% @poems.each do |poem| %>
    <h3><%= poem.title %></h3>
    <h3><%= poem.user.name %></h3>
  <% end %>

  <%= paginate @poems %>

  <br>

  <%= link_to 'New Poem', new_poem_path %>

</main>

